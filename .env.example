# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///geoscan.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/geoscan_db

# Google Maps API (for location verification)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Image Recognition API (for mineral identification)
# Options: cloudvision, aws-rekognition, custom-api
MINERAL_API_PROVIDER=custom-api
MINERAL_API_KEY=your-mineral-api-key
MINERAL_API_ENDPOINT=https://api.mineralscan.com

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=geoscan-minerals-bucket
AWS_REGION=us-east-1

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Rewards/Incentives System
BASE_REWARD_POINTS=100
REWARD_CURRENCY=GEM

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=geoscan.log

# Security
SESSION_COOKIE_SECURE=False  # Set to True in production
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
